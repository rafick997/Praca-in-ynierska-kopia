@using Przychodnia_medyczna.Models
@model LoginViewModel


<h2>Logowanie</h2>

 <div class="row">
      
          @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
       
                    @Html.ValidationSummary(true, "")

            <div class="form-group">
                @Html.Label("Nazwa użytkownika", new { @class = "col-md-2 control-label" })
             
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { @class = "col-md-5 form-control" }) 
                </div>
            </div>


                    <div class="form-group">
                        @Html.Label("Hasło", new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @class = "col-md-2 col-lg-3 form-control" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                <br/>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Zaloguj się" class="btn btn-default" />
                        </div>
                    </div>
           
            }
    
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}